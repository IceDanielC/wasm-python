{
    "compilerOptions": {
      "target": "ES2019",
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "emitDeclarationOnly": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "lib": ["ES2019", "DOM"],
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": "./",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["types/*.ts", "src/**/*.ts"],
    "exclude": ["node_modules"]
  }